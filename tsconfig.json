{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@commands/*": ["./commands/*"],
      "@queries/*": ["./queries/*"],
      "@common/*": ["./common/*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}